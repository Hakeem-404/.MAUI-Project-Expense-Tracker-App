<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="ExpenseMauiApp.Views.ProjectDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Project Details">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header with favorite button -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" Margin="20,10">
            <Label x:Name="lblProjectName" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#673AB7"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="Center"/>
                   
            <Button x:Name="btnFavorite"
                    Text="{Binding FavoriteButtonText}"
                    BackgroundColor="{Binding FavoriteButtonColor}"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="End"
                    Clicked="OnFavoriteClicked"/>
        </StackLayout>
        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">
                <Frame BorderColor="#E0E0E0" Padding="15" CornerRadius="10">
                    <Grid RowSpacing="10" ColumnSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Project ID:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" x:Name="lblProjectID" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Manager:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" x:Name="lblManager" />
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Status:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" x:Name="lblStatus" TextColor="#4CAF50" />
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Budget:" FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1" x:Name="lblBudget" TextColor="#4CAF50" />
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="Start Date:" FontAttributes="Bold" />
                        <Label Grid.Row="4" Grid.Column="1" x:Name="lblStartDate" />
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="End Date:" FontAttributes="Bold" />
                        <Label Grid.Row="5" Grid.Column="1" x:Name="lblEndDate" />
                    </Grid>
                </Frame>
                
                <Frame BorderColor="#E0E0E0" Padding="15" CornerRadius="10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Description" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="lblDescription" />
                    </VerticalStackLayout>
                </Frame>
                
                <Frame x:Name="specialReqFrame" BorderColor="#E0E0E0" Padding="15" CornerRadius="10" IsVisible="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Special Requirements" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="lblSpecialReq" />
                    </VerticalStackLayout>
                </Frame>
                
                <Frame x:Name="clientInfoFrame" BorderColor="#E0E0E0" Padding="15" CornerRadius="10" IsVisible="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Client Information" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="lblClientInfo" />
                    </VerticalStackLayout>
                </Frame>
                
                <!-- Button for Add Expense -->
                <Button Text="Add Expense" 
                        BackgroundColor="#4CAF50" TextColor="White" 
                        CornerRadius="10" 
                        Clicked="OnAddExpenseClicked"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>